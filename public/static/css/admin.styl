body
    background-color: #f5f6fa;
    font-size 14px;
    font-family: 'Roboto', sans-serif;
a
    text-decoration: none
    &:hover
        text-decoration: none
h2,h3,h4,h5,ul,body,html 
    padding: 0px
    margin: 0px;
    
.text-final-linea
    word-break: break-all
    hyphens: auto

.mtop16
    margin-top: 16px
.mb16
    margin-bottom: 16px
.mb32
    margin-bottom: 32px

.wrapper
    min-height: 100vh
    overflow hidden
    .col1
        float left;
        width 20%
        z-index 2
    .col2
        float left
        width: 80%
.sidebar
    background-color: #fff
    min-height: 100vh
    box-shadow: 0 0.3rem 0.4rem rgb(0, 0, 0, 0.20)
    .section-top
        background-color:rgba(71, 186, 205, 1);
        box-shadow: 0 0.25rem 0.4rem rgb(0, 0, 0, 0.20)
    .logo
        display block
        transition: 0.3s;
        justify-content: center
        display flex
        align-content: center
        background-color: rgba(255,255,255,.1)
        border-bottom: 1px solid #e17227
    img 
        padding: 10px
        width 200px
        border-radius: 20%
    .user
        color #fff !important
        padding: 15px
        a 
            font-size: 1.7em
            float: right 
            margin-right: 20px;
            transition: 0.3s;
            color: #e17127
            &:hover
                color: #994d1a
.main
    display: block
    margin-top: 10px
    ul
        li 
            margin-bottom: 4px
            transition: 0.4s;
            a
                color: #8998ac !important
                display: block
                font-size: 1.1em
                padding: 12px 16px
                transition: 0.4s;
                i 
                    margin-right 20px   
                &:hover
                    background-color: #47bacd;
                    box-shadow: 0 0.25rem 0.4rem rgb(0, 0, 0, 0.10)
                    color: #fff !important
                    text-decoration: none
                    padding-left: 30px;
            a.active
                background-color: #47bacd;
                box-shadow: 0 0.25rem 0.4rem rgb(0, 0, 0, 0.10)
                color: #fff !important
                text-decoration: none
                padding-left: 30px;
.navbar
    background-color: #47bacd;
    a 
        color #fff !important
.page
    margin-top: 15px
    margin-bottom 15px
    .breadcrumb
        background-color: #fff
        padding: 10px
        box-shadow: 0 0.25rem 0.4rem rgb(0, 0, 0, 0.10)
        border-radius: 5px;
        .breadcrumb-item
            a
                color #e17227
                transition: .4s
                &:hover  
                    text-decoration: none 
                    color #994d1a 
    .panel
        background-color: #fff
        border-radius: 5px
        border-bottom: 2px solid  #e17227;
        width 100%
        .header
            border-bottom 1px solid  #e171275d
            h2.title
                display inline-block
                color #19213d
                font-size: 1.1em
                padding: 12px 16px
                margin-left: 5px
            ul 
                display inline-block
                float right 
                margin-right: 110px
                li 
                    display inline-block
                    transition: .4s
                    position relative
                    a
                        display inline-block
                        padding: 10px
                        transition: .4s
                        &:hover
                            background-color: rgba(0,0,0,.10)
                            text-decoration: none;
                            color: #222
                            cursor pointer
                    ul
                        display: none
                        background-color: #fff
                        transition: .4s
                        float: none
                        position absolute
                        width: 200px
                        box-shadow: 2px 5px 5px rgba(0,0,0,.50)
                        border-radius: 5px
                        li 
                            display: inline-block
                            border-bottom: 1px solid #e171275d
                            width: 100%
                            transition: .4s
                            font-size: 1em
                            padding: 4px
                            &:last-child
                                border-bottom: 0px
                            a
                                display block
                    &:hover
                        ul
                            display block
        .inside
            padding: 16px
            .paginate
                a[rel = 'next']
                   font-size: 25px
                   padding: 1px 10px
                a[rel = 'prev']
                   font-size: 25px
                   padding: 1px 10px
            .nav
                .nav-link
                    border: 1px solid  #47bacd 
                    margin-right: 8px
                    transition: 0.4s;
                    &:active
                    &:hover
                        background-color: #47bacd
                        color #fff
            .big-count
                display block
                text-align: center
                width: 100%
                font-size: 2em
            table 
                thead
                    tr
                        td
                            border none !important
                tbody 
                    tr   
                        td
                            border none !important 
                        &:nth-child(odd)
                            background-color: rgba(0,0,0,.10)
                tfoot
                    tr
                        td
                            border none !important
.opts
    a
        border-radius: 4px
        border: 1px solid #dedede
        display inline-block
        padding: 8px 12px
        transition: 0.3s;

.galeria
    overflow hidden
    .btn-submit
        width: 100%
        margin-right: 1px
        display block
        transition: 0.3s;
        a
            display block
            width: 100%
            color: #333
            font-size: 1.5em
            border-radius: 4px
            text-align: center
            padding: 10px
            border 1px dashed #6666
            transition: 0.3s;
            &:hover
                background-color: #47bacd
                color #fff
                cursor: pointer

.img-thumbnail
    transition: 0.3s     
    &:hover
        background-color: #e17227;
        opacity 0.7

.tumbs
    overflow hidden
    .tumb
        float left
        position relative
        margin-top: 15px
        width: 48%    
        #icon
            display inline-block
            position: absolute
            z-index 2
            background-color: rgba(0, 0, 0, .5)
            padding: 5px
            color: #fff
            bottom 8px
            right 8px
            border-radius: 20%
        img
            border-radius: 8px 
        &:nth-child(odd)
            margin-right: 4%

.page-user
    .mini-perfil
        .avatar
            display: block
            margin: 0px auto
            border-radius: 2px
            width: 120px
        .info
            color: black
            text-align: justify
            span 
                display block
                font-size: 1.1em
                width: 100%
            span.title
                font-weight: bold
                margin-top: 15px
        .btn
            margin-top: 16px
            width: 100%
.slider-content
    opacity 0.8
    border-radius: 4px
    padding: 10px
    font-size: 1em
    span 
        font-size: 1.6em
        font-weight: bold
    h3
        font-size: 1.4em
        margin: 0px
        padding: 0px
