.carousel
    padding: 0px
    max-height 350px
    border-radius: 50px        
    .carousel-control-prev
        transition: .3s 
        border-radius: 50px
        #prev
            color color2
            font-size: 3em
            transition: .3s 
        &:hover
            background: -webkit-linear-gradient(left, transparent, rgba(0,0,0, .40));
            background: -o-linear-gradient(left, transparent, rgba(0,0,0, .40));
            background: -moz-linear-gradient(left, transparent, rgba(0,0,0, .40));
            background: linear-gradient(to left, transparent, rgba(0,0,0, .40));
            background-color: transparent
            #prev
                -ms-transform: translate(-10px,0px); /* IE 9 */
                -webkit-transform: translate(-10px,0px); /* Safari */
                transform: translate(-10px,0px);
    .carousel-control-next
        transition: .3s
        #next
            color color2
            font-size: 3em
            transition: .3s 
        &:hover
            background: -webkit-linear-gradient(right, transparent, rgba(0,0,0, .40));
            background: -o-linear-gradient(right, transparent, rgba(0,0,0, .40));
            background: -moz-linear-gradient(right, transparent, rgba(0,0,0, .40));
            background: linear-gradient(to right, transparent, rgba(0,0,0, .40));
            background-color: transparent
            #next
                -ms-transform: translate(10px,0px); /* IE 9 */
                -webkit-transform: translate(10px,0px); /* Safari */
                transform: translate(10px,0px);
    .carousel-inner
        .carousel-caption
            position: relative;
            overflow auto;
            text-align: justify;
            margin: 50px 70px;
            padding: 0px 10px;
            border-left: 2px solid color2;
            max-height 200px
            max-width 75%
        img
            display inline-block
            width: 100%
            height 100%
            max-width 100%
            max-height 350px
