.wrapper
    z-index 2
    background-color: #f9f9f9
    .panel
        background-color: #fff
        border-radius: 5px
        border-bottom: 2px solid #47bacd;
        width 100%
        .header
            border-bottom 1px solid #e8e8e8
            h2.title
                display inline-block
                color #19213d
                font-size: 1.1em
                margin-bottom: 0px !important
                padding: 10px 15px
                margin-left: 5px
            ul 
                display inline-block
                float right 
                margin-right: 110px
                li 
                    display inline-block
                    transition: .4s
                    position relative
                    a
                        display inline-block
                        padding: 10px
                        transition: .4s
                        &:hover
                            background-color: rgba(0,0,0,.10)
                            text-decoration: none;
                            color: #222
                            cursor pointer
                    ul
                        display: none
                        background-color: #fff
                        transition: .4s
                        float: none
                        position absolute
                        width: 200px
                        box-shadow: 2px 5px 5px rgba(0,0,0,.50)
                        border-radius: 5px
                        li 
                            display: inline-block
                            border-bottom: 1px solid #f0f0f0
                            width: 100%
                            transition: .4s
                            font-size: 1em
                            padding: 4px
                            &:last-child
                                border-bottom: 0px
                            a
                                display block
                    &:hover
